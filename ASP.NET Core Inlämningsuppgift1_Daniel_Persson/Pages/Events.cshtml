@page
@model ASP.NET_Core_Inlämningsuppgift1_Daniel_Persson.Pages.EventsModel

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Organizers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Spots_available)
            </th>
            <td>
                <a asp-page="./Index" asp-route-id="">Home</a>

            </td>
        </tr>
    </thead>


    <tbody>
        <!-- Foreach: hjälper oss att lägga ut endast en unik bokning. -->
        @foreach (var item in Model.Event)
        {
            string EventId = "EventId" + item.Id; <!-- Lagt till ny varibel-->
        <tr id="@EventId">
            <td>
                @Html.DisplayFor(model => item.Title)
            </td>
            <td>
                @Html.DisplayFor(model => item.Organizers)
            </td>
            <td>
                @Html.DisplayFor(model => item.Description)
            </td>
            <td>
                @Html.DisplayFor(model => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(model => item.Date) <!-- Den här och den där nere, "item.Spots_available fungerar, men Html.DisplayFor kan göra mer specifika funktioner -->
            </td>
            <td>
                @item.Spots_available
            </td>
            <td>
             
                <a asp-page="/JoinEvent" asp-route-id="@item.Id"><button class="btn btn-primary">Join</button></a>
            </td>
        </tr>
        }
    </tbody>
</table>
